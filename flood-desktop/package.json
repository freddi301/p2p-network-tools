{
  "name": "p2p-network-tools-flood-desktop",
  "description": "p2p sharing app",
  "version": "0.0.0",
  "private": true,
  "license": "GPL-3.0",
  "author": "Frederik Batuna <gobi301@gmail.com>",
  "main": "dist/main.js",
  "scripts": {
    "start": "yarn && tsc && electron .",
    "dist": "yarn && tsc && electron-builder",
    "test": "jest"
  },
  "dependencies": {
    "cbor": "^5.1.0",
    "emotion": "^10.0.27",
    "hyperswarm": "^2.15.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/cbor": "^5.0.1",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "electron": "10.1.2",
    "electron-builder": "^22.8.1",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "jest": "^26.4.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": "react-app"
  },
  "eslintIgnore": [
    "dist"
  ],
  "build": {
    "appId": "p2p-network-tools-flood-desktop",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "index.html",
      "dist/**/*.js",
      "node_modules/**/*"
    ]
  }
}
