{
  "name": "p2p-network-tools-desktop-electron",
  "description": "p2p sharing app",
  "version": "0.0.0",
  "private": true,
  "license": "GPL-3.0",
  "author": "Frederik Batuna <gobi301@gmail.com>",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "copy:frontend": "cd ../frontend && yarn && yarn build && cd ../desktop-electron && rm -rf frontend && cp -r ../frontend/build frontend",
    "build:backend": "cd ../backend && yarn && yarn build",
    "import-dependencies": "yarn copy:frontend && yarn build:backend && yarn",
    "package": "yarn import-dependencies && yarn dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1"
  },
  "build": {
    "appId": "p2p-network-tools-desktop-electron",
    "files": [
      "index.js",
      "index.html",
      "frontend/**/*",
      "backend/**/*"
    ],
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "backend": "file:../backend"
  }
}
